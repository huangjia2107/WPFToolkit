<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:panels="clr-namespace:UIResources.Panels;assembly=UIResources"
        xmlns:controls="clr-namespace:UIResources.Controls;assembly=UIResources" 
        xmlns:themes="clr-namespace:UIResources.Themes;assembly=UIResources" 
        Title="MainWindow" Height="350" Width="485" WindowStartupLocation="CenterScreen">
    <Grid x:Name="rootGrid">
        <!--Style="{StaticResource/DynamicResource {x:Static themes:ResourceKeys.NoBgButtonStyleKey}}"-->
        <Button x:Name="testBtn" Content="545456" HorizontalAlignment="Left" Width="50" Margin="10,10,0,0" VerticalAlignment="Top" Height="49" Click="Button_Click_1" BorderThickness="0"/>

        <StackPanel Margin="10,125,10,0" VerticalAlignment="Top" Grid.IsSharedSizeScope="true">
            <controls:Ruler Scale="{Binding Value,ElementName=ScaleSlider}" Offset="{Binding Value,ElementName=OffsetSlider}" Height="20"/>

            <Grid Margin="0,10,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="FirstColumn"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Scale" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="ScaleSlider" Grid.Column="1" Minimum="1" Maximum="100" Value="1" SmallChange="0.5" TickFrequency="0.5" IsSnapToTickEnabled="True"/>
                <TextBox Grid.Column="2" Text="{Binding Value,ElementName=ScaleSlider,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" Width="80"/>
            </Grid>
            <Grid Margin="0,10,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="FirstColumn"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Offset" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="OffsetSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="0" SmallChange="1" TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBox Grid.Column="2" Text="{Binding Value,ElementName=OffsetSlider,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" Width="80"/>
            </Grid>
			
			
			<controls:Ruler Scale="{Binding Value,ElementName=slider1}" Height="20" Margin="0,30,0,0"/>
			<Grid Margin="0,10,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="slider1" Minimum="0.01" Maximum="1" Value="0.01" SmallChange="0.005" TickFrequency="0.005" IsSnapToTickEnabled="True"/>
                <TextBox Grid.Column="1" Text="{Binding Value,ElementName=slider1,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" Width="80"/>
            </Grid>
        </StackPanel>
        

        
    </Grid>
</Window>
